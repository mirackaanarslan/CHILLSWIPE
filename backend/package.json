{
  "name": "@prediction-market/backend",
  "version": "1.0.0",
  "description": "Backend Cloud Functions for prediction market app",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
