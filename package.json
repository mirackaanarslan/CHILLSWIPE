{
  "name": "prediction-market-app",
  "version": "1.0.0",
  "description": "Scalable prediction market application with Supabase",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
